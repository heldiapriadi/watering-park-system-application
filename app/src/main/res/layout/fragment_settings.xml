<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SettingsFragment">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="90dp">

            <View
                android:id="@+id/view_settings"
                android:layout_width="370dp"
                android:layout_height="600dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/rounded_background_green" />

            <Button
                android:id="@+id/size_water_storage"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="35dp"
                android:backgroundTint="@color/brown"
                android:fontFamily="@font/marcellus_sc"
                android:text="Size Water Storage" />

            <Button
                android:id="@+id/monitoring_history"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="90dp"
                android:layout_marginRight="35dp"
                android:backgroundTint="@color/brown"
                android:fontFamily="@font/marcellus_sc"
                android:text="Monitoring History" />

            <TextView
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="150dp"
                android:fontFamily="@font/marcellus_sc"
                android:text="On/Off Automatically Sprinkle"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Switch
                android:id="@+id/switch_automatically_sprinkle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="156dp"
                android:layout_marginRight="35dp"
                android:thumb="@drawable/thumb"
                android:track="@drawable/track" />
        </RelativeLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>